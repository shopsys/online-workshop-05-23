{% extends '@ShopsysShop/Front/Layout/layoutWithoutPanel.html.twig' %}
{% import '@ShopsysShop/Front/Content/Product/productListMacro.html.twig' as macro %}

{% block title %}
    {{- article.seoTitle|default(article.name) -}}
{% endblock %}

{% block meta_description %}
    {{- article.seoMetaDescription|default(getSeoMetaDescription()) -}}
{% endblock %}

{% block main_content %}
    <h1>
        {% if article.seoH1 is not null %}
            {{ article.seoH1 }}
        {% else %}
            {{ article.name }}
        {% endif %}
    </h1>

    <p>{{ article.createdAt|date('j.n.Y') }}</p>

    <div class="in-user-text">
        {{ article.text|raw }}
    </div>

    {{ macro.list(products) }}

{% endblock %}